---
interface Props {
  listTitle: string;
  listItems: {
    title: string;
    description: string;
  }[];
}
const {listTitle, listItems} = Astro.props
---
<h2 class="text-2xl font-bold  border-b mb-6">{listTitle}</h2>
<div class="grid gap-6 mb-12">
  {
    listItems.map((item) => (
      <div class="p-3 bg-transparent rounded-none text-inherit shadow-none border-none">
        <h3 class="text-xl font-semibold mb-3">{item.title}</h3>
        <p>{item.description}</p>
      </div>
    ))
  }
</div>
